<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.delli.lsurvey.Step12Activity">

    <TextView
        android:id="@+id/tv_s12"
        android:layout_width="266dp"
        android:layout_height="48dp"
        android:text="Which search engines do you mostly use in China?(Choose all that apply)"
        android:gravity="center"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/cb_s12a"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <CheckBox
        android:id="@+id/cb_s12a"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:text="Baidu"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="118dp" />

    <CheckBox
        android:id="@+id/cb_s12b"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:text="360"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/cb_s12a" />

    <CheckBox
        android:id="@+id/cb_s12c"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:text="Sogou"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/cb_s12b" />

    <CheckBox
        android:id="@+id/cb_s12d"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:text="Soso"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/cb_s12c" />

    <CheckBox
        android:id="@+id/cb_s12e"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:text="Google"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/cb_s12d" />

    <CheckBox
        android:id="@+id/cb_s12f"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:text="Yahoo"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/cb_s12e" />

    <Button
        android:id="@+id/btn_s12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select all those that apply"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/cb_s12f"
        app:layout_constraintHorizontal_bias="0.505" />
</android.support.constraint.ConstraintLayout>
