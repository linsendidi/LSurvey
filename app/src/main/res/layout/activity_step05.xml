<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.delli.lsurvey.Step05Activity">

    <TextView
        android:id="@+id/tv_s05"
        android:layout_width="179dp"
        android:layout_height="44dp"
        android:text="Education level(Now)"
        android:textColor="@color/colorblue"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/rgp_s05"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btn_s05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please,choose one."
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <RadioGroup
        android:id="@+id/rgp_s05"
        android:layout_width="217dp"
        android:layout_height="247dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="129dp">

        <RadioButton
            android:id="@+id/rbtn_s05a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Senior/12th Grade" />

        <RadioButton
            android:id="@+id/rbtn_s05b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gap year" />

        <RadioButton
            android:id="@+id/rbtn_s05c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Freshman year" />

        <RadioButton
            android:id="@+id/rbtn_s05d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sophomore year" />

        <RadioButton
            android:id="@+id/rbtn_s05e"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Junior year" />

        <RadioButton
            android:id="@+id/rbtn_s05f"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Senior year" />

        <RadioButton
            android:id="@+id/rbtn_s05g"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Postgraduate education" />
    </RadioGroup>
</android.support.constraint.ConstraintLayout>
