<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.delli.lsurvey.Step10Activity">

    <TextView
        android:id="@+id/tv_s10"
        android:layout_width="300dp"
        android:layout_height="38dp"
        android:text="Have you taken any of the HSK exams...?"
        android:textColor="@color/colorblue"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/rgp_s10" />

    <Button
        android:id="@+id/btn_s10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please,choose one."
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <RadioGroup
        android:id="@+id/rgp_s10"
        android:layout_width="134dp"
        android:layout_height="140dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp">

        <RadioButton
            android:id="@+id/rbtn_s10a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No" />

        <RadioButton
            android:id="@+id/rbtn_s10b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yes,HSK4" />

        <RadioButton
            android:id="@+id/rbtn_s10c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yes,HSK5" />

        <RadioButton
            android:id="@+id/rbtn_s10d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yes,HSK6" />
    </RadioGroup>
</android.support.constraint.ConstraintLayout>
